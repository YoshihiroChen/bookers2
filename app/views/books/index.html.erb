<div class="container">
  <div class="row">
    <!-- 🔹 左侧栏：当前用户信息 + 投稿表单 -->
    <div class="col-md-3">
      <h2><%= @user.name %> 's profile</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% else %>
        <%= image_tag 'no_image.jpg', width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% end %>

      <% if current_user == @user %>
        <p><strong>Introduction:</strong> <%= @user.introduction %></p>
        <%= link_to 'Edit My Profile', edit_user_path(current_user), class: 'btn btn-outline-primary btn-sm mt-2' %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <hr>

      <h4>New book</h4>

      <%= form_with(model: @book, url: books_path, local: true) do |f| %>
        <% if @book.errors.any? %>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>

        <div>
          <%= f.submit 'Create Book', class: 'btn btn-primary mt-2' %>
        </div>
      <% end %>
    </div>

    <!-- 🔹 右侧主内容：投稿一覧 -->
    <div class="col-md-8 offset-md-1">
      <h3 class="mb-4">
        <i class="fa-solid fa-book-open"></i> All Books
      </h3>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th>Owner</th>
            <th>Details</th>
            <th>Likes</th>
            <th>Comments</th> <!-- 💬 评论列 -->
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>
                <%= link_to user_path(book.user) do %>
                  <% if book.user.profile_image.attached? %>
                    <%= image_tag book.user.profile_image.variant(resize_to_fill: [50, 50]), class: 'rounded-circle me-2' %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', width: 50, height: 50, class: 'rounded-circle me-2' %>
                  <% end %>
                  <%= book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to 'Show', book_path(book), class: 'btn btn-sm btn-info' %>
              </td>
              <td>
                <% if current_user.favorites.exists?(book: book) %>
                  <%= button_to book_favorite_path(book), method: :delete, class: 'btn btn-link p-0' do %>
                    <i class="fa-solid fa-heart text-danger"></i>
                    <%= book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= button_to book_favorite_path(book), method: :post, class: 'btn btn-link p-0' do %>
                    <i class="fa-regular fa-heart"></i>
                    <%= book.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <i class="fa-solid fa-comment"></i>
                <%= book.book_comments.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
