<h2>Editing Book</h2>

<%= form_with(model: @book, url: book_path(@book), method: :patch, local: true) do |f| %>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Update Book', class: 'btn btn-primary' %>
  </div>
<% end %>


<%= link_to 'Back', books_path, class: 'btn btn-secondary mt-2' %>

<%= link_to 'Show', book_path(@book), class: 'btn btn-secondary mt-2' %>
