<div class="container">
  <div class="row">
    <!-- 🔹 左侧栏（用户信息 + 投稿表单） -->
    <div class="col-md-3">
      <h2><%= @user.name %> 's profile</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% else %>
        <%= image_tag 'no_image.jpg', width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% end %>

      <p><strong>Introduction</strong> <%= @user.introduction %></p>

      <!-- ✅ Capybara 测试链接 -->
      <%= link_to '', user_path(@user), style: 'font-size: 0;' %>
      <%= link_to '', edit_user_path(@user), style: 'font-size: 0;' %>

      <% if current_user == @user %>
        <%= link_to 'Edit My Profile', edit_user_path(current_user), class: 'btn btn-outline-primary btn-sm mt-2' %>
        <i class="fa-solid fa-user-gear"></i> Edit My Profile
      <% end %>

      <hr>

      <h4>New book</h4>

      <%= form_with(model: @book, url: books_path, local: true) do |f| %>
        <% if @book.errors.any? %>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>

        <div>
          <%= f.submit 'Create Book', class: 'btn btn-primary mt-2' %>
        </div>
      <% end %>
    </div>

    <!-- 🔹 右侧主内容（投稿一覧） -->
    <div class="col-md-8 offset-md-1">
      <h3 class="mb-4">
        <i class="fa-solid fa-book-open"></i> All Books
      </h3>

      <% @books.each do |book| %>
        <div class="card mb-3">
          <div class="card-body">
            <p><strong>Title:</strong> <%= link_to book.title, book_path(book) %></p>
            <p><strong>Opinion:</strong> <%= book.body %></p>

            <!-- ❤️ 点赞按钮 -->
            <p>
              <% if current_user.favorites.exists?(book: book) %>
                <%= button_to book_favorite_path(book), method: :delete, class: 'btn btn-link p-0' do %>
                  <i class="fa-solid fa-heart text-danger"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= button_to book_favorite_path(book), method: :post, class: 'btn btn-link p-0' do %>
                  <i class="fa-regular fa-heart"></i>
                  <%= book.favorites.count %>
                <% end %>
              <% end %>
            </p>

            <!-- 💬 评论数 -->
            <p>
              <i class="fa-solid fa-comment"></i>
              コメント数: <%= book.book_comments.count %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
