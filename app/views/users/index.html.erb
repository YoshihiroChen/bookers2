<div class="container">
  <div class="row">
    <!-- 🔹 左侧栏（用户信息 + 投稿） -->
    <div class="col-md-3">
      <%= render 'shared/sidebar', user: @user, new_book: Book.new %>
    </div>

    <!-- 🔹 右侧主内容（用户列表） -->
    <div class="col-md-8 offset-md-1">
      <h3 class="mb-4">
        <i class="fa-solid fa-users"></i> All Users
      </h3>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Action</th>
            <th>Profile's image</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
                <% if user == current_user %>
                  <span style="color: gray;">（自分）</span>
                <% end %>
              </td>
              <td>
                <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %>
              </td>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image.variant(resize_to_fill: [50, 50]), class: 'rounded-circle' %>
                <% else %>
                  <%= image_tag 'no_image.jpg', width: 50, height: 50, class: 'rounded-circle' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
