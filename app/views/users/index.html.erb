<div class="container">
  <div class="row">
    <!-- 🔹 左侧栏（用户信息 + 投稿） -->
    <div class="col-md-3">
      <h2><%= @user.name %> 's profile</h2>

      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% else %>
        <%= image_tag 'no_image.jpg', width: 100, height: 100, class: "rounded-circle mb-2" %>
      <% end %>

      <p><strong>Introduction：</strong> <%= @user.introduction %></p>

      <% if current_user == @user %>
        <%= link_to 'Edit My Profile', edit_user_path(current_user), class: 'btn btn-outline-primary btn-sm mt-2' %>
        <i class="fa-solid fa-user-gear"></i> Edit My Profile
      <% end %>

      <hr>

      <h4>New book</h4>

      <%= form_with(model: @book, url: books_path, local: true) do |f| %>
        <% if @book.errors.any? %>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>

        <div>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>

        <div>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>

        <div>
          <%= f.submit 'Create Book', class: 'btn btn-primary mt-2' %>
        </div>
      <% end %>
    </div>

    <!-- 🔹 右侧主内容（用户列表） -->
    <div class="col-md-8 offset-md-1">
      <h3 class="mb-4">
        <i class="fa-solid fa-users"></i> All Users
      </h3>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Action</th>
            <th>Profile's image</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.name %>
                <% if user == current_user %>
                  <span style="color: gray;">（自分）</span>
                <% end %>
              </td>
              <td>
                <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %>
              </td>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image.variant(resize_to_fill: [50, 50]), class: 'rounded-circle' %>
                <% else %>
                  <%= image_tag 'no_image.jpg', width: 50, height: 50, class: 'rounded-circle' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
