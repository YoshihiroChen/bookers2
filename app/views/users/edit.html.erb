<h2>プロフィールを編集する</h2>

<%= form_with(model: @user, url: user_path(@user), method: :patch, local: true, multipart: true) do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :introduction %><br>
    <%= f.text_area :introduction %>
  </div>

  <div>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>

  <%= f.submit '更新する', class: 'btn btn-primary mt-2' %>
<% end %>

<%= link_to '戻る', user_path(@user), class: 'btn btn-secondary mt-2' %>
